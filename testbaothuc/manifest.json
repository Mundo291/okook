{
"update_url": "https://clients2.google.com/service/update2/crx",

   "manifest_version": 2,
   "name": "Neon Clock",
   "description": "Alarm clock, timer, countdown",
   "version": "0.0.1",   
   "background": {
      "scripts": ["background.js"],
      "persistent": false
   },
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Báo thức và thời gian",
      "default_popup": "menu.html"
   },
   "icons": {
      "128": "icon-128.png",
      "16": "icon-16.png",
      "48": "icon-48.png"
   },
   "web_accessible_resources": [
      "icon-128.png"
   ],
   "permissions": [ "alarms", "notifications" ]
}